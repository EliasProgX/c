void marcar_velha(int escolha, int i) {
    if (i % 2 == 0) {
        velha[escolha] = "|X|";
    }
    if (i % 2 == 1) {
        velha[escolha] = "|0|";
    }
    verificar_ganhou();
}

void play_game() {
    int i = 0;
    int play = 1;
    int escolha;
    while (play) {
        if (i % 2 == 0) {
        printf("jogador 1 (X): ");
        scanf("%d", &escolha);
    } else if (i % 2 == 1) {
        printf("jogador 2 (0): ");
        scanf("%d", &escolha);
    }
    marcar_velha(escolha, i);
    system("cls");
    mostrar_velha();
    i++;
    }

}

int main() {
    int i = 0;
    int onOrOff = 1;
    construir_velha();
    while(onOrOff) {
        mostrar_velha();
        play_game();
        onOrOff = 0;
    }

    return 0;
}
