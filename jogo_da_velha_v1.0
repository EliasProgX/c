int velha[9];

void construir_velha() {
    for (int i = 1; i <= 9; i++) {
        velha[i] = "|%d|";
    }

}

void mostrar_velha() {
    for (int i = 1; i <= 9; i++) {
        printf(velha[i]);
        if (i % 3 == 0) {
            printf("\n");
        }
    }
}

